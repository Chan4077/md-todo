{
    "manifest_version": 2,
    "name": "Material Todo",
    "version": "1.0.1",
    "description": "AngularJS Material Todo App",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "permissions": [
        "storage"
    ],
    "browser_action": {
        "default_icon": "img/icon48.png",
        "default_title": "Todo App",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "author": "Edric Chan"
}